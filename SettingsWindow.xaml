<Window x:Class="CustomGadgetApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Clock Font Size" Margin="0,0,0,5"/>
            <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="72" TickFrequency="2" IsSnapToTickEnabled="True"
                    ValueChanged="FontSizeSlider_ValueChanged"/>
            <Button Content="Save" Margin="0,10,0,0" Click="SaveButton_Click" HorizontalAlignment="Right" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
