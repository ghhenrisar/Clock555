<Window x:Class="CustomGadgetApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Clock Font Size:" Margin="0,0,0,5"/>
        <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="60" ValueChanged="FontSizeSlider_ValueChanged"/>
    </StackPanel>
</Window>
